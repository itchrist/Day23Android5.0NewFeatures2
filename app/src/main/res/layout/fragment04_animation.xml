<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/demo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Part01：触摸反馈"
                android:textColor="#55000000" />

            <include layout="@layout/divider" />

            <!--Part01：触摸反馈-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <Button
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="默认"
                    android:textColor="#88000000" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="按钮：selectableItemBackground"
                    android:textColor="#88000000" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="80dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:text="按钮：selectableItemBackgroundBorderless"
                    android:textColor="#88000000" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Part02：createCircularReveal"
                android:textColor="#55000000" />

            <include layout="@layout/divider" />

            <!--Part02：Reveal动画-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="圆形缩小动画"
                    android:textColor="#88000000" />

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="80dp"
                    android:background="#00b8d4"
                    android:gravity="center"
                    android:text="圆形放大动画"
                    android:textColor="#88000000" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Part03：曲线动画"
                android:textColor="#55000000" />

            <include layout="@layout/divider" />

            <!--Part03：曲线动画-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/curved"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/circle_shape"
                    android:gravity="center"
                    android:text="曲线动画"
                    android:textColor="#88000000" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Part04：状态动画"
                android:textColor="#55000000" />

            <include layout="@layout/divider" />

            <!--Part04：状态动画-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/state_anim"
                    android:stateListAnimator="@drawable/state_anim"
                    android:text="TextView"
                    android:textColor="#88ff0000" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/state_list" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rainbow_list" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Part05：矢量图动画s"
                android:textColor="#55000000" />

            <include layout="@layout/divider" />

            <!--Part05：矢量图动画-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vector_anim"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/vector_animation"
                    android:gravity="center"
                    android:text="矢量图动画"
                    android:textColor="#88000000" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Part06：Activity转场动画"
                android:textColor="#55000000" />

            <include layout="@layout/divider" />

            <!--Part06：Activity转场动画-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/transitions"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="80dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:text="转场动画"
                    android:textColor="#88000000" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <WebView
        android:id="@+id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>